// Game features
const features = [
  {
    icon: "üß©",
    title: "Unique Puzzles",
    description: "Every puzzle is carefully crafted to have a perfect solution where all words connect."
  },
  {
    icon: "üìà",
    title: "Progressive Difficulty",
    description: "Challenge yourself with increasingly complex word puzzles that test your vocabulary and strategic thinking."
  },
  {
    icon: "üí°",
    title: "Dual Hint System",
    description: "Stuck on a puzzle? Use our reveal word hint or get a different word clue to help you progress."
  },
  {
    icon: "üèÜ",
    title: "Multiple Game Modes",
    description: "Enjoy Daily Challenges with leaderboards and the Word Connect style Word Quest mode for varied gameplay."
