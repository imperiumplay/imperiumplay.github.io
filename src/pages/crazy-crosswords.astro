<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('reviewsTrack');
    const reviews = document.querySelectorAll('.review-card:not(.duplicate)');
    const totalReviews = reviews.length;
    let currentIndex = 0;
    
    function getVisibleCards() {
      return window.innerWidth >= 768 ? 3 : 1;
    }
    
    function updateCarousel() {
      const cardWidth = 312; // 280px card + 32px gap
      const offset = -currentIndex * cardWidth;
      track.style.transform = `translateX(${offset}px)`;
    }
    
    function nextSlide() {
      currentIndex++;
      
      // If we've reached the end of original reviews, reset to beginning without animation
      if (currentIndex >= totalReviews) {
        // Let the animation complete to show the duplicated cards
        setTimeout(() => {
          // Quick reset to first slide without animation
          track.style.transition = 'none';
          currentIndex = 0;
          updateCarousel();
          
          // Restore animation for next slide
          setTimeout(() => {
            track.style.transition = 'transform 0.5s ease';
          }, 50);
        }, 500);
      }
      
      updateCarousel();
    }
    
    // Auto-advance every 4 seconds
    setInterval(nextSlide, 4000);
    
    // Update on resize
    window.addEventListener('resize', updateCarousel);
    
    // Set initial transition
    track.style.transition = 'transform 0.5s ease';
    
    // Initial setup
    updateCarousel();
  });
</script>