import Footer from '../components/Footer.astro';

const footerLinks = [
  { href: "/how-to-play", text: "How to Play" },
  { href: "/privacy-policy", text: "Privacy Policy" },
  { href: "/terms", text: "Terms & Conditions" }
];

// FAQ data
const faqs = [
  {
    question: "How do I play Crazy Crosswords?",
    answer: "Drag and drop letters onto the grid to form valid words in both rows and columns. Each puzzle has a unique solution where all letters fit perfectly."
  },
  {
