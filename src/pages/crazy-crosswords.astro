---

<BaseLayout 
  title="Crazy Crosswords - Word Puzzle Game by ImperiumPlay"
  description="Challenge your vocabulary in Crazy Crosswords. Arrange letters to create valid words in rows and columns. Available on iOS and Android."
  ogUrl="https://imperiumplay.com/crazy-crosswords"
>
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="game-intro">
          <img src="/images/Icon_crazycrosswords.jpg" alt="Crazy Crosswords Icon" class="game-icon">
          <h1><span class="highlight">Crazy</span>Crosswords</h1>
          <p class="tagline">Where Words Find Their Perfect Place</p>
          <p class="description">
            Challenge your vocabulary in this unique word puzzle game. Arrange letters on the grid to create valid words in both rows and columns, testing your word skills in this addictive puzzle experience.
          </p>
          <div class="store-buttons">
            <a href="https://apps.apple.com/us/app/crazy-crosswords/id6720760088" class="store-button ios">
              <img src="/images/badges/app-store-badge.svg" alt="Download on the App Store" class="store-badge">
            </a>
            <a href="https://play.google.com/store/apps/details?id=com.imperiumplay.CrazyCrossword" class="store-button android">
              <img src="/images/badges/google-play-badge.png" alt="Get it on Google Play" class="store-badge google-play">
            </a>
          </div>
        </div>
        
        <div class="game-preview">
          <div class="devices-mockup">
            <div class="phone-mockup primary">
              <!-- Replace with actual screenshot when available -->
              <div class="placeholder-screenshot">
                <p>Main Gameplay</p>
                <small>Add screenshots to /public/images/crazy-crosswords/</small>
              </div>
            </div>
            <div class="phone-mockup secondary">
              <!-- Replace with actual screenshot when available -->
              <div class="placeholder-screenshot">
                <p>Word Quest Mode</p>
                <small>Add screenshots to /public/images/crazy-crosswords/</small>
              </div>
            </div>
            <div class="phone-mockup tertiary">
              <!-- Replace with actual screenshot when available -->
              <div class="placeholder-screenshot">
                <p>Daily Challenge</p>
                <small>Add screenshots to /public/images/crazy-crosswords/</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Features Section -->
    <section class="features">
      <div class="container">
        <h2>Game Features</h2>
        <div class="features-grid">
          {features.map(feature => (
            <div class="feature-card">
              <div class="feature-icon">{feature.icon}</div>
              <h3>{feature.title}</h3>
              <p>{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Screenshots Gallery -->
    <section class="screenshots">
      <div class="container">
        <h2>Game Screenshots</h2>
        <div class="screenshot-gallery">
          <!-- Replace with actual screenshots when available -->
          <div class="screenshot placeholder">
            <p>Gameplay Screenshot 1</p>
            <small>Add to /images/crazy-crosswords/</small>
          </div>
          <div class="screenshot placeholder">
            <p>Gameplay Screenshot 2</p>
            <small>Add to /images/crazy-crosswords/</small>
          </div>
          <div class="screenshot placeholder">
            <p>Gameplay Screenshot 3</p>
            <small>Add to /images/crazy-crosswords/</small>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Reviews Section -->
    <section class="reviews">
      <div class="container">
        <h2>What Players Are Saying</h2>
        <div class="reviews-grid">
          {reviews.map(review => (
            <div class="review-card">
              <div class="review-rating">
                {"‚òÖ".repeat(review.rating) + "‚òÜ".repeat(5 - review.rating)}
              </div>
              <p class="review-text">"{review.text}"</p>
              <p class="review-author">- {review.name}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- FAQ Section -->
    <section class="faq">
      <div class="container">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-list">
          {faqs.map((faq, index) => (
            <details class="faq-item" open={index === 0}>
              <summary>{faq.question}</summary>
              <p>{faq.answer}</p>
            </details>
          ))}
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <h2>Ready to Challenge Your Word Skills?</h2>
        <p>Download Crazy Crosswords now and start arranging letters to create perfect word grids!</p>
        <div class="store-buttons">
          <a href="https://apps.apple.com/us/app/crazy-crosswords/id6720760088" class="store-button ios">
            <img src="/images/badges/app-store-badge.svg" alt="Download on the App Store" class="store-badge">
          </a>
          <a href="https://play.google.com/store/apps/details?id=com.imperiumplay.CrazyCrossword" class="store-button android">
            <img src="/images/badges/google-play-badge.png" alt="Get it on Google Play" class="store-badge google-play">
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer links={footerLinks} />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(124, 152, 133, 0.1) 0%, rgba(240, 230, 239, 0.2) 100%);
  }
  
  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .game-icon {
    width: 120px;
    height: 120px;
    border-radius: 24px;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }
  
  h1 {
    font-size: 3.5rem;
    margin: 0;
    letter-spacing: 2px;
    font-weight: 300;
    line-height: 1;
  }
  
  .tagline {
    font-size: 1.4rem;
    margin: 0.5rem 0 1.5rem;
    opacity: 0.8;
    font-weight: 300;
  }
  
  .description {
    margin: 1.5rem 0;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
  }
  
  .store-buttons {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }
  
  .store-button {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    min-height: 44px;
  }
  
  .store-button:hover {
    transform: translateY(-2px);
    filter: brightness(1.05);
  }
  
  .store-badge {
    height: 40px;
    width: auto;
  }
  
  .store-badge.google-play {
    height: 60px;
  }
  
  .devices-mockup {
    position: relative;
    height: 500px;
    width: 100%;
    display: flex;
    justify-content: center;
  }
  
  .phone-mockup {
    background: #333;
    border-radius: 36px;
    padding: 12px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 6px solid #222;
    position: absolute;
    width: 220px;
  }
  
  .phone-mockup.primary {
    z-index: 3;
    transform: translateY(0) scale(1);
  }
  
  .phone-mockup.secondary {
    z-index: 2;
    transform: translateX(-140px) translateY(40px) scale(0.85) rotate(-10deg);
  }
  
  .phone-mockup.tertiary {
    z-index: 1;
    transform: translateX(140px) translateY(40px) scale(0.85) rotate(10deg);
  }
  
  .placeholder-screenshot {
    background: #444;
    aspect-ratio: 9/16;
    border-radius: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #aaa;
    text-align: center;
    padding: 1rem;
  }
  
  /* Features Section */
  .features {
    padding: 5rem 2rem;
    background: #fff;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .features h2, .screenshots h2, .reviews h2, .faq h2, .cta h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    font-weight: 300;
    color: #4a4a4a;
  }
  
  .features-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .feature-card {
    flex: 1 1 250px;
    min-width: 250px;
    max-width: 350px;
  }
  
  .feature-card {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
  }
  
  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .feature-card h3 {
    color: #7c9885;
    margin-bottom: 1rem;
    font-weight: 400;
  }
  
  /* Screenshots Gallery */
  .screenshots {
    padding: 5rem 2rem;
    background: #f8f9fa;
  }
  
  .screenshot-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .screenshot {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    aspect-ratio: 9/16;
  }
  
  .screenshot.placeholder {
    background: #eee;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #999;
    text-align: center;
    padding: 1rem;
  }
  
  /* Reviews Section */
  .reviews {
    padding: 5rem 2rem;
    background: #fff;
  }
  
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .review-card {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
  }
  
  .review-rating {
    color: #ffc107;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .review-text {
    font-style: italic;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .review-author {
    text-align: right;
    font-weight: 500;
    color: #7c9885;
  }
  
  /* FAQ Section */
  .faq {
    padding: 5rem 2rem;
    background: #f8f9fa;
  }
  
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .faq-item {
    margin-bottom: 1rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
  }
  
  .faq-item summary {
    font-weight: 500;
    cursor: pointer;
    padding: 1rem 0;
    color: #4a4a4a;
  }
  
  .faq-item summary:hover {
    color: #7c9885;
  }
  
  .faq-item p {
    padding: 1rem;
    margin: 0;
    background: #fff;
    border-radius: 8px;
    line-height: 1.6;
  }
  
  /* CTA Section */
  .cta {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, rgba(124, 152, 133, 0.2) 0%, rgba(240, 230, 239, 0.3) 100%);
    text-align: center;
  }
  
  .cta p {
    max-width: 600px;
    margin: 1rem auto 2rem;
    font-size: 1.2rem;
    opacity: 0.8;
  }
  
  .cta .store-buttons {
    justify-content: center;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem;
    }
    
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    h1 {
      font-size: 2.8rem;
    }
    
    .tagline {
      font-size: 1.2rem;
    }
    
    .game-icon {
      margin: 0 auto 1.5rem;
    }
    
    .features, .screenshots, .reviews, .faq, .cta {
      padding: 3rem 1rem;
    }
    
    .features h2, .screenshots h2, .reviews h2, .faq h2, .cta h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    
    .store-buttons {
      justify-content: center;
    }
    
    .devices-mockup {
      height: 400px;
    }
    
    .phone-mockup {
      width: 180px;
    }
    
    .phone-mockup.secondary {
      transform: translateX(-100px) translateY(40px) scale(0.85) rotate(-10deg);
    }
    
    .phone-mockup.tertiary {
      transform: translateX(100px) translateY(40px) scale(0.85) rotate(10deg);
    }
    
    .feature-card {
      min-width: 100%;
      max-width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    h1 {
      font-size: 2.2rem;
    }
    
    .tagline {
      font-size: 1rem;
    }
    
    .description {
      font-size: 1rem;
    }
    
    .game-icon {
      width: 100px;
      height: 100px;
    }
    
    .devices-mockup {
      height: 350px;
    }
    
    .phone-mockup {
      width: 150px;
    }
    
    .phone-mockup.secondary {
      transform: translateX(-70px) translateY(30px) scale(0.8) rotate(-10deg);
    }
    
    .phone-mockup.tertiary {
      transform: translateX(70px) translateY(30px) scale(0.8) rotate(10deg);
    }
    
    .features-grid, .screenshot-gallery, .reviews-grid {
      grid-template-columns: 1fr;
    }
    
    .store-badge {
      height: 36px;
    }
  }
</style>