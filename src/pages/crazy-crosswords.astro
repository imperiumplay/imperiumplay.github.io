// User reviews
const reviews = [
  {
    name: "WordMaster92",
    rating: 5,
    text: "The perfect blend of crosswords and word puzzles. I'm completely addicted!"
  },
  {
    name: "PuzzleFan",
    rating: 5,
    text: "Challenging but not frustrating. The hint system is really helpful when I get stuck."
  },
  {
    name: "GameLover45",
    rating: 4,
    text: "Great way to improve vocabulary while having fun. Would love more themes in future updates."
