---
import BaseLayout from '../layouts/BaseLayout.astro';
import GameShowcase from '../components/GameShowcase.astro';
import Footer from '../components/Footer.astro';

const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ImperiumPlay",
    "url": "https://imperiumplay.com",
    "description": "Mobile game development company creating engaging games"
  }
];

const footerLinks = [
  { href: "/blog", text: "Blog" },
  { href: "/privacy-policy", text: "Privacy Policy" },
  { href: "/terms", text: "Terms & Conditions" }
];
---

<BaseLayout 
  title="ImperiumPlay - Mobile Game Development"
  description="ImperiumPlay creates engaging mobile games. Something amazing is brewing - stay tuned for our upcoming releases!"
  keywords="mobile games, game development, indie games, gaming"
  ogUrl="https://imperiumplay.com"
  canonicalUrl="https://imperiumplay.com/"
  structuredData={structuredData}
>
  <main>
    <section class="hero">
      <div class="hero-content">
        <div class="brand">
          <h1><span class="highlight">Imperium</span>Play</h1>
          <p class="tagline">Redefining Play, One Game at a Time</p>
          <p class="brewing-message">Something amazing is brewing...</p>
        </div>
      </div>
    </section>
    

  </main>
  
  <Footer links={footerLinks} />
</BaseLayout>

<style>
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 2rem 1rem;
  position: relative;
  overflow: hidden;
}

.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(124, 152, 133, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(240, 230, 239, 0.2) 0%, transparent 50%);
  z-index: -1;
}

.hero-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.brand {
  text-align: center;
}

.brand h1 {
  font-size: 5rem;
  margin: 0 0 1rem 0;
  letter-spacing: 3px;
  font-weight: 200;
  line-height: 0.9;
  animation: fadeIn 2s ease-in;
}

.tagline {
  font-size: 1.4rem;
  margin: 0 0 2rem 0;
  opacity: 0.7;
  font-weight: 300;
}

.brewing-message {
  font-size: 1.8rem;
  margin: 0;
  color: #7c9885;
  font-weight: 400;
  font-style: italic;
  opacity: 0.9;
}





@media (max-width: 768px) {
  .hero {
    padding: 1rem;
    min-height: auto;
  }
  
  .hero-content {
    text-align: center;
  }
  
  .brand h1 {
    font-size: 2.8rem;
    letter-spacing: 1px;
  }
  
  .tagline {
    font-size: 1.1rem;
  }
  
  .brewing-message {
    font-size: 1.4rem;
  }
  

}

@media (max-width: 480px) {
  .hero {
    padding: 0.5rem;
  }
  
  .brand h1 {
    font-size: 2.2rem;
  }
  
  .featured-game {
    padding: 1rem;
    margin: 0;
  }
  
  .game-info h2 {
    font-size: 1.4rem;
  }
  
  .stat {
    font-size: 0.75rem;
    padding: 0.3rem 0.6rem;
  }
  
  .store-badge {
    height: 40px;
  }
  
  .store-badge.google-play {
    height: 40px;
  }
  

}
</style>