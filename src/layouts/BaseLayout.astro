---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogUrl?: string;
  canonicalUrl?: string;
  appId?: { ios?: string; android?: string };
  structuredData?: any[];
}

const { title, description, keywords, ogUrl, canonicalUrl, appId, structuredData } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#e8eeea">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <title>{title}</title>
  <meta name="description" content={description}>
  {keywords && <meta name="keywords" content={keywords}>}
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  {ogUrl && <meta property="og:url" content={ogUrl}>}
  <meta name="twitter:card" content="summary">
  
  {appId?.ios && <meta name="apple-itunes-app" content={`app-id=${appId.ios}`}>}
  {appId?.android && <meta name="google-play-app" content={`app-id=${appId.android}`}>}
  
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="apple-touch-icon" href="/favicon.png">
  {canonicalUrl && <link rel="canonical" href={canonicalUrl}>}
  
  {structuredData && structuredData.map(data => (
    <script type="application/ld+json" set:html={JSON.stringify(data)} />
  ))}

</head>
<body>
  <slot />
</body>
</html>